<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#33b5e5"
        android:id="@+id/linearLayout"
        android:gravity="end">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMInconsistencias"
            android:drawableLeft="@drawable/ic_alert_circle_white_24dp"
            android:text="InconsistÃªncias"
            android:layout_marginLeft="10dp"
            android:textColor="#fffffa00"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMEstoque"
            android:drawableLeft="@drawable/ic_package_variant_white_24dp"
            android:text="Estoque"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:visibility="visible"
            android:textSize="22dp"
            android:layout_marginRight="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMBuscarDados"
            android:drawableLeft="@drawable/ic_action_action_pageview"
            android:text="Buscar"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMSalvarDados"
            android:drawableLeft="@drawable/ic_action_content_save"
            android:text="Salvar dados"
            android:layout_marginLeft="45dp"
            android:textColor="#ffffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btMEnviarDados"
            android:drawableLeft="@drawable/ic_send_white_24dp"
            android:text="Enviar dados"
            android:textColor="#ffffffff"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

</RelativeLayout>
